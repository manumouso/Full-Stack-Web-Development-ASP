@model IEnumerable<Educacion.Areas.Admin.Models.AspNetUserRole>

@{
    ViewBag.Title = "Roles";
   
}

<h2>Roles</h2>
<p style="color:red">
    @ViewBag.Mensaje
</p>

<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.AspNetRole.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AspNetUser.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.AspNetRole.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
            </td>
            <td>
                @Html.ActionLink("Eliminar Relacion", "Delete", new { id = item.AspNetUser.Id, id2 = item.AspNetRole.Id })

            </td>
        </tr>
    }
    
</table>

    <div class="form-actions no-color">
        
        @Html.ActionLink("Volver", "Index","Admin")
    </div>
